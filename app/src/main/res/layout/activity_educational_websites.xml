<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".educationalwebsites.EducationalWebsites"
    android:fitsSystemWindows="true"
    android:id="@+id/websiteDrawer"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view_website"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/websitetoolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00008577"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_baseline_menu_24" />

            <TextView
                android:id="@+id/titleEdWebsites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/educational_websites"
                android:fontFamily="@font/ubuntu_medium"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/websitetoolbar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_25ssp"
                android:textColor="@color/orange"/>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/khanAcademyButton"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/custom_button_khan_academy"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Khan Academy"
                android:fontFamily="@font/ubuntu_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/titleEdWebsites"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/duolingoButton"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/custom_button_duolingo"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Duolingo"
                android:fontFamily="@font/ubuntu_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/khanAcademyButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/udemyButton"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/custom_button_udemy"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Udemy"
                android:fontFamily="@font/ubuntu_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/duolingoButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/historyButton"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/custom_button_history"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="History.com"
                android:fontFamily="@font/ubuntu_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/udemyButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/googleClassroomButton"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_google_classroom"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Google Classroom"
                android:fontFamily="@font/ubuntu_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/historyButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/schoologyButton"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/custom_button_schoology"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Schoology"
                android:fontFamily="@font/ubuntu_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/googleClassroomButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>









</androidx.drawerlayout.widget.DrawerLayout>